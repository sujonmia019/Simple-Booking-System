{
"openapi": "3.0.0",
"info": {
    "title": "Simple Booking System API",
    "description": "Professional API documentation for Simple Booking System (Laravel Sanctum)",
    "contact": {
    "email": "sujonbdjoin019@gmail.com"
    },
    "version": "1.0.0"
},
"servers": [
    {
    "url": "http://localhost:8000/api",
    "description": "Local API server"
    }
],
"components": {
    "securitySchemes": {
    "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
    }
    },
    "schemas": {
    "Service": {
        "type": "object",
        "properties": {
        "id": {
            "type": "integer",
            "example": 1
        },
        "name": {
            "type": "string",
            "example": "Facial Treatment"
        },
        "description": {
            "type": "string",
            "example": "A relaxing facial spa treatment"
        },
        "price": {
            "type": "number",
            "format": "decimal",
            "example": 75
        },
        "status": {
            "type": "integer",
            "enum": [
            1,
            2
            ],
            "example": 1,
            "description": "1 = Active, 2 = Inactive"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
        }
    },
    "Booking": {
        "type": "object",
        "properties": {
        "id": {
            "type": "integer",
            "example": 1
        },
        "user_id": {
            "type": "integer",
            "example": 5
        },
        "service_id": {
            "type": "integer",
            "example": 2
        },
        "booking_date": {
            "type": "string",
            "format": "date",
            "example": "2025-08-21"
        },
        "status": {
            "type": "integer",
            "enum": [
            1,
            2,
            3
            ],
            "example": 1,
            "description": "1 = Pending, 2 = Confirmed, 3 = Cancelled"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        }
        }
    }
    }
},
"security": [
    {
    "bearerAuth": []
    }
],
"paths": {
    "/register": {
    "post": {
        "tags": [
        "Auth"
        ],
        "summary": "Register a new customer",
        "requestBody": {
        "required": true,
        "content": {
            "application/json": {
            "schema": {
                "required": [
                    "full_name",
                    "phone_number",
                    "email",
                    "password",
                    "password_confirmation"
                ],
                "properties": {
                "full_name": {
                    "type": "string",
                    "example": "John Doe"
                },
                "phone_number": {
                    "type": "string",
                    "format": "Valid BD Phone Number",
                    "example": "01743776488"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "example": "john@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "12345678"
                },
                "password_confirmation": {
                    "type": "string",
                    "example": "12345678"
                }
                }
            }
            }
        }
        },
        "responses": {
            "201": {
                "description": "User registered successfully",
                "content": {
                "application/json": {
                    "example": {
                        "status": "success",
                        "message": "Registration successful",
                        "data": {
                            "user": {
                                "id": 5,
                                "role_name": "customer",
                                "full_name": "ismail",
                                "email": "sujonbdjoin@gmail.com",
                                "phone_number": "01425784542",
                                "created_at": "2025-08-19T05:15:41.000000Z"
                            },
                            "access_token": "5|GLiBJLT9d1VufTTiHAwdtVIhJcObZjcmaSGHOk0r987912b6",
                            "token_type": "Bearer"
                        },
                        "response_code": 201
                    }
                }
            }
            },
            "200": {
                "description": "Validation error and status = false"
            }
        }
    }
    },
    "/login": {
    "post": {
        "tags": [
        "Auth"
        ],
        "summary": "Login (Customer/Admin)",
        "requestBody": {
        "required": true,
        "content": {
            "application/json": {
            "schema": {
                "required": [
                "email",
                "password"
                ],
                "properties": {
                "email": {
                    "type": "string",
                    "format": "email",
                    "example": "sujonbdjoin019@gmail.com"
                },
                "password": {
                    "type": "string",
                    "example": "12345678"
                }
                }
            }
            }
        }
        },
        "responses": {
        "200": {
            "description": "Login successful",
            "content": {
            "application/json": {
                "example": {
                    "status": "success",
                    "message": "Login successful",
                    "data": {
                        "user": {
                            "id": 4,
                            "role_name": "customer",
                            "full_name": "ismail",
                            "email": "sujonbdjoin019@gmail.com",
                            "phone_number": "01425784545",
                            "created_at": "2025-08-18T06:55:25.000000Z"
                        },
                        "access_token": "4|oW2WQdGHPDcK7qTWAv1OmHwNX83J6tYzckgZxP4H44630e38",
                        "token_type": "Bearer"
                    },
                    "response_code": 200
                }
            }
            }
        },
        "401": {
            "description": "Invalid credentials"
        }
        }
    }
    },
    "/v1/logout": {
    "post": {
        "tags": [
        "Auth"
        ],
        "summary": "Logout (Customer/Admin)",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "responses": {
        "200": {
            "description": "Logged out successfully",
            "content": {
                "application/json": {
                    "example": {
                        "status": "success",
                        "message": "Logged out",
                        "data": null,
                        "response_code": 200
                    }
                }
            }
        }
        }
    }
    },
    "/v1/customer/services": {
    "get": {
        "tags": [
        "Customer"
        ],
        "summary": "List all available services",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "responses": {
        "200": {
            "description": "List of services",
            "content": {
            "application/json": {
                "schema": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Service"
                }
                }
            }
            }
        }
        }
    }
    },
    "/v1/customer/bookings": {
    "get": {
        "tags": [
        "Customer"
        ],
        "summary": "List logged-in user's bookings",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "responses": {
        "200": {
            "description": "List of bookings",
            "content": {
            "application/json": {
                "schema": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Booking"
                }
                }
            }
            }
        }
        }
    },
    "post": {
        "tags": [
        "Customer"
        ],
        "summary": "Book a service",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "requestBody": {
        "required": true,
        "content": {
            "application/json": {
            "schema": {
                "required": [
                "service_id",
                "booking_date"
                ],
                "properties": {
                "service_id": {
                    "type": "integer",
                    "example": 1
                },
                "booking_date": {
                    "type": "string",
                    "format": "date",
                    "example": "2025-08-21"
                }
                }
            }
            }
        }
        },
        "responses": {
        "201": {
            "description": "Booking created successfully"
        }
        }
    }
    },
    "/v1/admin/services": {
    "post": {
        "tags": [
        "Admin"
        ],
        "summary": "Create a new service",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "requestBody": {
        "required": true,
        "content": {
            "application/json": {
            "schema": {
                "required": [
                "name",
                "price",
                "status"
                ],
                "properties": {
                "name": {
                    "type": "string",
                    "example": "Facial Treatment"
                },
                "description": {
                    "type": "string",
                    "example": "A relaxing facial spa treatment"
                },
                "price": {
                    "type": "number",
                    "example": 75
                },
                "status": {
                    "type": "integer",
                    "enum": [
                    1,
                    2
                    ],
                    "example": 1,
                    "description": "1 = Active, 2 = Inactive"
                }
                }
            }
            }
        }
        },
        "responses": {
        "201": {
            "description": "Service created"
        }
        }
    }
    },
    "/v1/admin/services/{id}": {
    "put": {
        "tags": [
        "Admin"
        ],
        "summary": "Update service details",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "parameters": [
        {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
            "type": "integer"
            }
        }
        ],
        "requestBody": {
        "required": true,
        "content": {
            "application/json": {
            "schema": {
                "properties": {
                "name": {
                    "type": "string",
                    "example": "Updated Service"
                },
                "description": {
                    "type": "string",
                    "example": "Updated service description"
                },
                "price": {
                    "type": "number",
                    "example": 99
                },
                "status": {
                    "type": "integer",
                    "enum": [
                    1,
                    2
                    ],
                    "example": 2,
                    "description": "1 = Active, 2 = Inactive"
                }
                }
            }
            }
        }
        },
        "responses": {
        "200": {
            "description": "Service updated successfully"
        }
        }
    },
    "delete": {
        "tags": [
        "Admin"
        ],
        "summary": "Delete a service",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "parameters": [
        {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
            "type": "integer"
            }
        }
        ],
        "responses": {
        "200": {
            "description": "Service deleted successfully"
        }
        }
    }
    },
    "/v1/admin/bookings": {
    "get": {
        "tags": [
        "Admin"
        ],
        "summary": "List all customer bookings",
        "security": [
        {
            "bearerAuth": []
        }
        ],
        "responses": {
        "200": {
            "description": "All bookings",
            "content": {
            "application/json": {
                "schema": {
                "type": "array",
                "items": {
                    "$ref": "#/components/schemas/Booking"
                }
                }
            }
            }
        }
        }
    }
    }
},
